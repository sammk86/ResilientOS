# Database
POSTGRES_URL=postgresql
# Authentication
AUTH_SECRET=your-auth-secret-here-generate-with-openssl-rand-base64-32

# Base URL
BASE_URL=http://localhost:3000

# Stripe Configuration
# Set STRIPE_ENABLED=true to enable Stripe payment processing
# When disabled, Plus plan users will see a contact message instead of checkout
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Resend Email Configuration (Optional)
# Set RESEND_ENABLED=true to enable email features
# When disabled, activation emails won't be sent and admins must confirm users via database
RESEND_ENABLED=false
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com
CONTACT_EMAIL=contact@yourdomain.com

# AI Configuration (Groq)
# Required for Risk and BIA analysis features
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama3-70b-8192
